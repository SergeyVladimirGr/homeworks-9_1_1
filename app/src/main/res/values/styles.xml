<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.likeButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/ic_like</item>
        <item name="iconTint">@color/color_like</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
    </style>

    <style name="Widget.App.shareButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/ic_share</item>
        <item name="iconTint">@color/color_grey</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
    </style>

    <style name="Widget.App.viewsButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/ic_views</item>
        <item name="iconTint">@color/color_grey</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
    </style>

    <style name="Widget.App.menuButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="icon">@drawable/ic_menu</item>
        <item name="iconTint">@color/color_grey</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
    </style>
</resources>
